{
  "manifest_version": 2,

  "name": "Replacer",
  "description": "Расширение для чештины",
  "version": "1.4",
  "icons": { "128": "icon.png" },
  
  "permissions": [
    "https://slovnik.seznam.cz/",
    "https://translate.google.ru/",
    "http://prirucka.ujc.cas.cz/"
  ],
  "content_scripts" : [
    {
      "matches" : [
        "https://slovnik.seznam.cz/*",
        "https://translate.google.ru/*",
        "https://translate.google.com/*",
        "http://prirucka.ujc.cas.cz/*"
      ],
      "js" : ["logic.js"],
      "run_at" : "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}